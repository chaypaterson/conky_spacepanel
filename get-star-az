#!/bin/bash

# a script to get viewing coords of solar system bodies

year=$(TZ=UTC date +%Y)
month=$(TZ=UTC date +%m)
day=$(TZ=UTC date +%d)
hr=$(TZ=UTC date +%H)
min=$(TZ=UTC date +%M)
sec=$(TZ=UTC date +%S)

body="$1"

aa << EOF | sed -n '/Topocentric:  Al/{s/Topocentric: //; s/-  /-/; s/Altitude //; s/Azimuth //; s/, / \/ /; s/\(\.[0-9][0-9]\)[0-9]/\1/g; s/^ *//; s/ deg/Â°/gp}'
$year
$month
$day
$hr
$min
$sec
1
1
88

$body
EOF
